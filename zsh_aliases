alias awsprod="AWS_REGION=us-east-1 AWS_PROFILE=sfprod aws"
alias awsinfra="AWS_PROFILE=sfinfra aws"
alias awsstage="AWS_PROFILE=sfstage aws"

bindkey '^R' history-incremental-pattern-search-backward
bindkey '^S' history-incremental-pattern-search-forward

ftfc ()
{
  sudo killall VDCAssistant;
  sudo killall AppleCameraAssistant
}

sshinfra() {
  ssh $(AWS_PROFILE=sfinfra aws ec2 describe-instances --region us-east-1 --filters Name=tag:Name,Values=tf-ecs-main Name=instance-state-name,Values=running --query 'Reservations[0].Instances[1].PrivateIpAddress' --output text)
}

sshprod() {
  ssh $(AWS_PROFILE=sfprod aws ec2 describe-instances --region us-east-1 --filters Name=tag:Name,Values=ecs-production-on_demand Name=instance-state-name,Values=running --query 'Reservations[0].Instances[0].PrivateIpAddress' --output text)
}

sshstage() {
  ssh $(AWS_PROFILE=sfstage aws ec2 describe-instances --region us-east-1 --filters Name=tag:Name,Values=ecs-production-on_demand Name=instance-state-name,Values=running --query 'Reservations[0].Instances[0].PrivateIpAddress' --output text)
}
