alias fossh="ssh $(AWS_PROFILE=sfinfra aws ec2 describe-instances --region us-east-1 --filters Name=tag:Name,Values=tf-ecs-main Name=instance-state-name,Values=running --query 'Reservations[0].Instances[0].PrivateIpAddress' --output text)"

bindkey '^R' history-incremental-pattern-search-backward
bindkey '^S' history-incremental-pattern-search-forward

ftfc ()
{
  sudo killall VDCAssistant;
  sudo killall AppleCameraAssistant
}

fixops() {
  if [[ $@ =~ '(pg psql|postgres psql)' ]]
  then
    echo "HOOK"
    command fixops $@
    echo "UNHOOK"
  else
    command fixops $@
  fi
}
